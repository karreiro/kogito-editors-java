{
  "include": ["src"],
  "exclude": ["./**/node_modules", "./**/test-setup"],
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["es6", "dom", "es2018.promise", "es2019"],
    "target": "es5",
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "jsx": "react-jsx",
    "outDir": "dist",
    "skipLibCheck": true,
    "isolatedModules": false
  }
}
